@model BL.Compra
@{
    ViewData["Title"] = "ResumenCompra";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/css/Compras.css" />

<h1>Resumen Compra</h1>

<div class="col summary">

    <hr>
    <div class="row">
        <div class="col" style="padding-left:0;">@Model.Alimento.Nombre</div>
        <div class="col text-right">$ @Model.Total</div>
    </div>

    <div class="row" style="border-top: 1px solid rgba(0,0,0,.1); padding: 2vh 0;">
        <div class="col">Pagaste con</div>
        <div class="col text-right">$@Model.DineroIngresado</div>
    </div>
    <div class="row" style="border-top: 1px solid rgba(0,0,0,.1); padding: 2vh 0;">
        <div class="col">Tu cambio</div>
        <div class="col text-right">$@Model.Cambio</div>
    </div>
    <div class="row" style="border-top: 1px solid rgba(0,0,0,.1); padding: 2vh 0;">
        <div class="col">Denominacion</div>
        <div class="col text-right">$ @ViewBag.Cambio</div>
        <div class="col text-right">$10</div>
        <div class="col text-right">$10</div>
    </div>
</div>
<button type="button" class="close btn" data-dismiss="modal" aria-label="Close" onclick="CloseModal()">
    Volver
</button>